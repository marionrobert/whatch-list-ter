<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">

  <div class="row my-3">
    <h2>All movies</h2>
  </div>

  <div class="row">
    <% @bookmarks.each do |bookmark| %>
      <div class="col-12 col-md6 col-lg-4">
        <div class="card card-movie" style="width: 18rem;">
                  <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash-can-arrow-up"></i>
          <% end %>
          <%= image_tag bookmark.movie.poster_url, class: 'card-img-movie' %>
          <div class="d-flex justify-content-between infos-movie card-body">
            <div class="">
              <p class="card-title"><strong><%= bookmark.movie.title %></strong></p>
              <p class="card-text"><%= bookmark.comment %></p>
            </div>
             <p><i class="fa-solid fa-star"></i> <%= bookmark.movie.rating %> / 10</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row my-5">
    <div class= "d-flex justify-content-around">
      <%= link_to "Update my list", edit_list_path(@list), class: "btn btn-ghost" %>
      <%= link_to "Delete my list",
          list_path(@list),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class: "btn btn-ghost" %>
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-ghost" %>
    </div>

  </div>

</div>
