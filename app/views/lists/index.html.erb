<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container text-center">
    <h1>Here are all my lists</h1>
  </div>
</div>

<div class="container">

  <ul>
    <% @lists.each do |list|%>
      <li><%= list.name %> <%= link_to list_path(list) do %>
        <i class="fa-solid fa-magnifying-glass"></i>
      <% end %></li>
    <% end %>
  </ul>

  <%= link_to "Create a new list", new_list_path, class: "btn btn-ghost" %>
</div>
