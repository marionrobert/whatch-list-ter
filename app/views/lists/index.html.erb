<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80);">
  <div class="container text-center">
    <h1>Here are all my lists</h1>
  </div>
</div>

<div class="container">

  <div class="row my-3 d-flex justify-content-around">
    <% @lists.each do |list|%>
      <div class="col-12 col-md-6 col-lg-4 my-3 link-show-list" >
        <%= link_to list_path(list) do %>
          <% if list.photo.attached? %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
               url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
                <%= list.name %>
              </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
            url(https://media.istockphoto.com/photos/fresh-popcorn-picture-id1124745046?k=20&m=1124745046&s=612x612&w=0&h=bqUC4tagZ-NiSWSt5KXUBYqGOco0wpF4pURwWYoK37o=)">
              <%= list.name %>
            </div>
          <% end %>
        <% end %></li>
      </div>
    <% end %>
  </div>

  <div class="row my-5 ">
    <div class="d-flex justify-content-center">
      <%= link_to "Create a new list", new_list_path, class: "btn btn-ghost" %>
    </div>
  </div>


</div>
